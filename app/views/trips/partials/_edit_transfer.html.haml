%p
  %u
    = t('trips.show.transfer')
    {{$index+1}}
  %a{href: 'javascript:void(0);', 'ng-click' => 'remove(day.transfers, $index)', class: 'pull-right'}
    = fa_icon 'times'

%div{class: 'form-group'}
  %div{class: 'col-md-6'}
    = render 'widgets/typeahead/cities', model_name: 'transfer.city_from', classes: 'input-sm form-control', placeholder: t('trips.show.from')
  %div{class: 'col-md-6'}
    = render 'widgets/typeahead/cities', model_name: 'transfer.city_to', classes: 'input-sm form-control', placeholder: t('trips.show.to')

%div{class: 'form-group'}
  %div{class: 'col-md-6 dropdown'}
    = render 'widgets/datetimepicker', id: 'dropdown-time-start-{{$index}}', link_default_text: t('trips.show.departure'), model: 'transfer.start_time'
  %div{class: 'col-md-6 dropdown'}
    = render 'widgets/datetimepicker', id: 'dropdown-time-end-{{$index}}', link_default_text: t('trips.show.arrival'), model: 'transfer.end_time'

%div{class: 'form-group'}
  %div{class: 'col-md-12'}
    %div{class: 'input-group input-group-sm'}
      %span{class: 'input-group-addon'}
        = fa_icon 'money'
      = text_field_tag 'transfer_price', '', 'ng-model' => 'transfer.price', class: 'input-sm form-control', placeholder: t('trips.show.price'), 'onlydigits' => 'true'

%p{'ng-init' => 'isCollapsed = true'}
  %a{'ng-click' => 'isCollapsed = !isCollapsed', href: 'javascript:void(0);'}
    %span{'ng-show' => 'isCollapsed'}
      = t('trips.show.more')
    %span{'ng-show' => '!isCollapsed'}
      = t('trips.show.less')

%div{collapse: 'isCollapsed'}
  %div{class: 'form-group'}
    %div{class: 'col-md-12'}
      = select_tag 'transfer_type', options_for_select(Travels::Transfer::Types::OPTIONS),
        {class: 'form-control input-sm selectpicker', 'ng-model' => 'transfer.type'}

  %div{class: 'form-group'}
    %div{class: 'col-md-12'}
      = text_area_tag 'transfer_comment', '', 'ng-model' => 'transfer.comment', class: 'form-control', placeholder: t('trips.show.comment'), rows: 6

  %div{class: 'form-group'}
    %div{class: 'col-md-4'}
      = text_field_tag 'transfer_code', '', 'ng-model' => 'transfer.code', class: 'input-sm form-control', placeholder: 'â„–'
    %div{class: 'col-md-8'}
      = text_field_tag 'transfer_company', '', 'ng-model' => 'transfer.company', class: 'input-sm form-control', placeholder: t('trips.show.carrier')

  %div{class: 'form-group'}
    %div{class: 'col-md-6'}
      = text_field_tag 'transfer_station_from', '', 'ng-model' => 'transfer.station_from', class: 'input-sm form-control', placeholder: t('trips.show.station_from')

    %div{class: 'col-md-6'}
      = text_field_tag 'transfer_station_to', '', 'ng-model' => 'transfer.station_to', class: 'input-sm form-control', placeholder: t('trips.show.station_to')

%hr
